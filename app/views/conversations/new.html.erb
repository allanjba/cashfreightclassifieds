<h1> New Conversation </h1>

<%=  form_tag conversations_path, method: :post do  %>
    <%=  hidden_field_tag :user_id, params[:user_id] %>
    <p> Subject : <%= text_field_tag :subject  %></p>
    <p> Message: <%= text_area_tag :body, '', class: 'messageField' %></p>
    <%= submit_tag "Send Message", class: 'ui primary button' %>

<% end %>
