<div class="profile">
    <div class="avatar-form">
        <%= form_for(@user, url: user_path, html: {id: "form-avatar"}) do |form| %>
        <label class="upload-avatar">
            <% if @user.avatar.attached? %>
                <%= image_tag(card(@user.avatar), class:'userImage') %>
            <% else %>
                <%= image_tag asset_path('userImage.png'), class: 'userImage', alt: 'User Avatar'%>
            <% end %>
            <%= form.file_field :avatar, id: 'avatar-field' %>
            <i class="plus circle icon"></i>
        </label>
        <% end %>
    </div>
    
    <div class="infoBox">
        <%= form_for(@user, url: user_path, html: {class: "ui form"}) do |form| %>
        <!-- Errors -->
        <% if user.errors.any? %>
            <div id="error_explanation" class="ui error message" style="display: block; width: 75%">
            <div class="header"><%= pluralize(user.errors.count, "error") %> keeping this user from being saved:</div>

            <ul class="list">
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
            </div>
        <% end %>
    <!-- End erros -->

        <% if current_user.admin? || current_user.id == 2 %>
        <div class="twelve wide field">
            <%= form.label :admin %>
            <%= form.check_box :admin %>
        </div>
        <% end %>

        <div class="twelve wide field">
            <%= form.label :first_name %>
            <%= form.text_field :first_name %>
        </div>
        <div class="twelve wide field">
            <%= form.label :last_name %>
            <%= form.text_field :last_name %>
        </div>
        <div class="twelve wide field">
            <%= form.label :address %>
            <%= form.text_field :address %>
        </div>
        <div class="two fields">
            <div class="four wide field">
                <%= form.label :city %>
                <%= form.text_field :city %>
            </div>
            <div class="four wide field">
                <%= form.label :state %>
                <%= form.text_field :state %>
            </div>
            <div class="four wide field">
                <%= form.label :zipcode %>
                <%= form.text_field :zipcode %>
            </div>
        </div>

        <div class="twelve wide field">
            <%= form.label :phone %>
            <%= form.text_field :phone %>
        </div>
        <div class="twelve wide field">
            <%= form.label :email %>
            <%= form.text_field :email %>
        </div>

        <%= form.submit 'Save Changes', class: 'ui primary button' %>
    <% end %>
</div>
</div>