<div class="linkIcon" id="messages-notification-menu" >
    <% if current_user.present? && current_user.notifications.where(type: 'MessageNotification').any? %>
        <div class="ui icon top right inline item dropdown" style="margin-right: 0">
            <!-- Check for user notifications  -->
            
            <!-- Unread messages notification with uniq conversation paramater -->
            <div class="notification-size red <%= "hide" if message_unread_size < 1 %>"><%= message_unread_size %></div>
            <i  class="envelope icon"></i>
            <div class="ui list menu">
                <%= render partial: 'notifications/items/message_notification_item' %>
            </div>
        </div>
    <% else %>
        <a class="ui icon top right inline item "  href="<%= conversations_path %>" style="margin-right: 0">
            <i  class="envelope icon"></i>
        </a>
    <% end %> <!-- end if -->
</div>