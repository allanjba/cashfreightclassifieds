<%if !current_user.present? %>
    window.location.replace('<%=new_user_session_path%>')
<% elsif @bid.errors.any? %>
    $("#bg-load-message").hide();
    // removes previous errors from page
    $("#bid-errors").remove();
    //creates paragraph where errors will show
    $("#bid-form").append('<p id="bid-errors"></p>');
    <% @bid.errors.full_messages.each do |error| %>
        $("#bid-errors").append('<%=error%><br/>');
    <%end%>
<% else %>
    $("#bg-load-message").hide()
    $("#bid-form").hide().fadeOut(200);

    $("#auction").append('<p>You are currently the heighest bidder</p>');
    $("#current-price").text('<%= @bid.bid_price %>');
<% end %>