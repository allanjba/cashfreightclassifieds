 <%= form_with(model: @bid,  class: 'ui input', id: 'bid-form' )do |form| %>
    <%= form.hidden_field :product_id, value: @product.id %>
    <%= form.text_field :bid_price, value: @product.bid_price_plus(1), style: 'width: 160px; height: 32px;margin-right: 5px', data: {product_id: @product.id } %>
    <%= form.submit 'Place bid', class: 'tiny ui primary button' %>
<% end %>