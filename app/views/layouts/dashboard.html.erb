<!DOCTYPE html>
<html>
  <head>
    <title>Cashfreightclassifieds</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'admin' %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    

    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
 
  </head>

  <body>
    <div class="header">
        <div class="admin" onclick="select(this)">
            <span>Admin</span>
        </div>
        <a class="title" href="<%= root_path%>">
            <div>
                <%= image_tag asset_path('cashfreightlogo.png'), class:'logo', alt: 'cashfreightlogo' %>
            </div>
            <div>
                <div>
                    <span class="cashfreight">CashFreight</span>
                </div>
                <div>
                    <span class="classifieds">Classifieds</span>
                </div>
            </div>
        </a>
        <div class="icons">
            <div id="menu" class="ui icon top right pointing dropdown button">
                <i class="bars icon"></i>
                <!-- render partial  _menu.html.erb -->
                <%= render partial: 'layouts/menu' %>
                <!-- end render -->
            </div>
        </div>
        </div>
    </div>
            <!-- notifications -->
            <% unless notice.nil? %>
            <div style="margin: 20px;">
                <div class="ui positive message">
                <p id="notice"><%= notice %></p>
                </div>
            </div>
            <%end%>
            <% unless alert.nil? %>
            <div style="margin: 20px;">
                <div class="ui warning message" >
                <p id="alert"><%= alert %></p>
                </div>
            </div>
            <%end%>
        <!-- end notifications -->
    <div class="content">
        <div class="mainMenu">
            <div id="menuIfMobile" class="ui secondary vertical menu">
                <%= link_to 'Users', dashboard_users_path, class: 'item'%>
                <%= link_to 'Categories', dashboard_categories_path, class: 'item'%>
            </div>
        </div>

        <!-- content -->
        <%= yield %>
        <!-- end content -->
        
    </div>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
